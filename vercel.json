{
    "version": 2,
    "framework": null,
    "buildCommand": null,
    "outputDirectory": null,
    "functions": {
        "api/**/*.ts": {
            "runtime": "edge",
            "maxDuration": 10
        }
    },
    "regions": [
        "iad1"
    ],
    "headers": [
        {
            "source": "/api/(.*)",
            "headers": [
                {
                    "key": "Access-Control-Allow-Origin",
                    "value": "*"
                },
                {
                    "key": "Access-Control-Allow-Methods",
                    "value": "POST, OPTIONS"
                },
                {
                    "key": "Access-Control-Allow-Headers",
                    "value": "Content-Type"
                }
            ]
        }
    ]
}